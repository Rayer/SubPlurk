<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <com.rayer.views.SparklingView android:id="@+id/gps_control_status_sv" android:layout_width="fill_parent" android:layout_height="wrap_content"/> 
  <TextView android:text="-----------" android:id="@+id/gps_control_location_tv" android:layout_below="@id/gps_control_status_sv" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  <TextView android:id="@+id/gps_control_address_tv" android:layout_below="@id/gps_control_location_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  <Button android:text="Post Location" android:id="@+id/gps_control_postlocation_btn" android:layout_below="@id/gps_control_address_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  <Button android:text="Post Address" android:id="@+id/gps_control_postaddress_btn" android:layout_below="@id/gps_control_address_tv" android:layout_toRightOf="@id/gps_control_postlocation_btn" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  <com.google.android.maps.MapView android:id="@+id/gps_control_mapview" android:apiKey="@string/map_apiKey" android:layout_below="@id/gps_control_postlocation_btn" android:layout_height="106dip" android:layout_width="fill_parent" />
</RelativeLayout>
